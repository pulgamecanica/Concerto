<div class="container">
  <h2 class="d-flex justify-content-between mb-4">
    <span>Pages <span class="badge badge-secondary"><%= Page.where(display: 1).all.count %></span></span>
      <%= link_to 'New Page', new_page_path, class: 'btn btn-primary'%>
  </h2>
  <% @pages.each do |page| %>
    <%= link_to edit_page_path(page), class: "text-decoration-none" do %>
      <div class="card mb-2 category-card">
        <h5 class="card-header text-primary d-flex justify-content-between">
          <%= page.title %> 
    <!--       < if category.active >
            <span class="badge bg-success text-light ">Active</span>
          < else >
            <span class="badge bg-danger text-light">Inactive</span>
          < end > -->
        </h5>
        <div class="row">
      <!--     <div class="card-body">
            < if category.category_image.present? >
                <div class="header-image rounded" style="background-image: url(<= url_for(category.category_image) >);"></div>
              < end >
          </div> -->
          <div class="card-body text-secondary">
            <span class="card-title text-secondary h5">
              <span>
              <%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger float-right ml-1" %>
              <%= link_to 'Edit', edit_page_path(page), class: "btn btn-primary float-right mr-1" %>
              </span>
              <%= page.description %>
            </span>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
